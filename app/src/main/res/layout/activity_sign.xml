<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D899"
    tools:context=".SecondActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="248dp"
        android:layout_height="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hh" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="SIGN-UP"

        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283" />

    <EditText
        android:id="@+id/username"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:background="@drawable/edit_text_shape"
        android:elevation="8dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="  USERNAME"
        android:includeFontPadding="false"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:shadowColor="@color/black"
        android:shadowDy="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />

    <EditText
        android:id="@+id/username2"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:background="@drawable/edit_text_shape"
        android:elevation="8dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint=" YOUR E-MAIL"
        android:includeFontPadding="false"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:shadowColor="@color/black"
        android:shadowDy="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/Password2"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_shape"
        android:elevation="8dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="  PASSWORD"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:shadowColor="@color/black"
        android:shadowDy="6"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/username" />


    <EditText
        android:id="@+id/rePassword2"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/edit_text_shape"
        android:elevation="8dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="  RE PASSWORD"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:shadowColor="@color/black"
        android:shadowDy="6"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/loginRedirectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="Already an user? Login"
        android:textColor="#14670A"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="339dp"
        android:layout_height="52dp"
        android:backgroundTint="#14670A"
        android:text="REGISTER"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rePassword2"
        app:layout_constraintVertical_bias="0.275" />
</androidx.constraintlayout.widget.ConstraintLayout>